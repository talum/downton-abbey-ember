    <h2>Summary: {{model.summary}}</h2>
    <p>Time Period: {{model.timePeriod}}</p>
    <p>Episodes:</p>
    <ul>
      {{#each model.episodes as |episode|}}
      <li>{{link-to episode.name "seasons.season.episode" episode}}</li>
      {{/each}}
    </ul>
  </div>
  <div class="col-md-6">
    {{outlet}}
  </div>
</div>