{{#if isEditing}}
  <form {{action 'update' on="submit"}}>
    <p>
      <label>Name</label>
      {{input value=name}}
    </p>
    <p>
      <label>Title</label>
      {{input value=title}}
    </p>
      <p>
      <label>Social Class</label>
      {{input value=socialClass}}
    </p>
    <input type="submit" value="Update">
  </form>

{{else}}
  <h3>{{name}}</h3>
  <p><strong>Title:</strong> {{title}}</p>
  <p><strong>Class: </strong>{{socialClass}}</p>
  <p><strong>Actor: </strong>
    {{actorName}}</p>
  <p><strong>Quotes:</strong>
    <ul>
      {{#each quotes as |quote| }}
      <li>{{quote.description}}</li>
      {{/each}}
    </ul>
</p>
{{/if}}
