  {{#if isEditing}}
    <form {{action 'update' on="submit"}}>
      <p>
        <label>Name</label>
        {{input value=name}}
      </p>
      <p>
        <label>Title</label>
        {{input value=title}}
      </p>
      <p>
        <label>Social Class</label>
        {{input value=socialClass}}
      </p>
      <p>
        <label>Bio</label>
        {{textarea value=bio}}
      </p>
      <p>
        <label>Image</label>
        {{input value=imageURL}}
      </p>
      <input type="submit" value="Update" class="button">
    </form>

  {{else}}
  <div class="content-container">
    <div class="character-name"><h3>{{name}}</h3></div>
    <div class="crop-height-char-page"><img src="{{imageURL}}" class="img-responsive"></div>
    <div class="content">
      <p><strong>Title:</strong> {{title}}</p>
      <p><strong>Class: </strong>{{socialClass}}</p>
      <p><strong>Bio: </strong>
        {{bio}}</p>
      <p><strong>Quotes:</strong>
        <ul class="quote-list">
          {{#each quotes as |quote| }}
          <li>"{{quote.description}}"â€”{{link-to quote.episode.name "seasons.season.episode" quote.episode.season quote.episode }}</li>
          {{/each}}
        </ul>
      </p>
    </div>
  </div>
  {{/if}}
